# Configurações do servidor
NODE_ENV=development
PORT=5000

# Configuração do banco de dados
# Para desenvolvimento local (opcional - pode usar PostgreSQL local)
DATABASE_URL=postgresql://username:password@localhost:5432/blog_system

# Para produção no Render (será preenchido automaticamente)
# DATABASE_URL=postgresql://user:password@host:port/database

# Configurações JWT
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_mude_em_producao

# Configurações de upload (opcional)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Configurações de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

